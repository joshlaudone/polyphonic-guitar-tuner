# Filename: my.kv

WindowManager:
    TunerWindow:

<TunerWindow>:
    name: "Tuner"
    canvas:
        Color:
            rgba: 0.11,0.15,0.22,1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        BoxLayout:
            canvas:
                Color:
                    rgba: 0.58,0.88,0.80,1
                Line:
                    rounded_rectangle: self.x, self.y, self.width, self.height, 10
                    width: 2
            id: tuning_canvas
            pos_hint: {"x":0.1, "top":0.9}
            color: 0.1,0.5,0.6,1
            size_hint: 0.8,0.7

        Button:
            text: "Settings"
            bold: True
            pos_hint: {"x":0.4, "y":0.05}
            on_release: app.open_settings()
            font_size: 30
            color: 0.85,0.95,0.91,1
            background_color: 0.95,0.31,0.32,1
            size_hint: 0.2,0.1

        Label:
            text: "Polyphonic Guitar Tuner"
            bold: True
            font_size: 30
            pos_hint: {"x":0.4, "y":0.925}
            size_hint: 0.2, 0.05
            color: 0.85,0.95,0.91,1